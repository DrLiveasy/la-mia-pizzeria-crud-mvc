@model Pizza

<div class="container mt-4">
    <form asp-controller="Pizza" asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label>Nome:</label>
            <input asp-for="Nome" type="text" class="form-control"/>
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Descrizione:</label>
            <textarea asp-for="Descrezione" rows="10" class="d-block w-100"></textarea>
            <span asp-validation-for="Descrezione" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Prezzo in € :</label>
            <input asp-for="Prezzo" type="text" class="form-control"/>
            <span asp-validation-for="Prezzo" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Path Immagine:</label>
            <input asp-for="Foto" type="text" class="form-control" />
            <span asp-validation-for="Foto" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mb-4">Salva</button>
    </form>
</div>