<!--
  Esercizio di oggi: Validazione + Modifica + Eliminazioni
nome repo: la-mia-pizzeria-ef-post
Andiamo avanti con i nostri sviluppi per la pizzeria... 
Aggiungiamo qualche Data annotation per validare qualche proprietà del nostro modello Piazza che abbiamo creato.
Dopodiché aggiungiamo dei nuovi metodi (action) al nostro Controller delle Pizze e le relative VIew che ci serviranno, p
er riuscire a:
modificare un pizza
eliminare un pizza (ricordatevi di chiamare questa action con un form "fittizio" 
che faccia una post con un bottone con l'id della pizza che volete eliminare)
-->

@{
    Layout = "MioLayout";
}

@model List<Pizza>

    @if (Model.Count > 0){


    <div class="container-xxl">

        <div class="mt-4 mb-4 text-center">
            <a class="btn btn-outline-success" href="@Url.Action("Create", "Pizza")">Aggiungi nuova pizza </a>
        </div>

        <table class="table text-muted">
        <thead>
        <tr>
            <th scope="col">Foto</th>
            <th scope="col">Nome</th>
            <th scope="col">Descrezione</th>
            <th scope="col">Prezzo</th>
            <th scope="col"></th>
      
        </tr>
        </thead>
           <tbody>

            @foreach (Pizza pizza in Model)
            {
                
            <tr>
                <td><img id="imgOnIndex" src="@pizza.Foto" alt="@pizza.Nome" /></td>
                <td>@pizza.Nome</td>
                <td>@pizza.Descrezione</td>
                <td>@pizza.Prezzo <span>€</span></td>
                <td>
                <a class="btn btn-info btn-sm" href="@Url.Action("Dettaglio", "Pizza", new { id = pizza.Id })">
                   <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-activity"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
                             
                </a>
                <a class="btn btn-warning btn-sm" href="@Url.Action("Update", "Pizza", new { id = pizza.Id })">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-activity"><polygon points="14 2 18 6 7 17 3 17 3 13 14 2"></polygon><line x1="3" y1="22" x2="21" y2="22"></line></svg>
                </a>
                </td>
            </tr>
            }

        </tbody>
        </table>

    </div>

}else {
    <h1>al momento no ci sono pizze da visualizzare </h1>
}